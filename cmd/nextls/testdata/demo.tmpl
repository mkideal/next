{{/* Go Template Syntax Showcase */}}
{{- $user := dict "name" "Alice" "role" "admin" "age" 28 -}}
{{- $fruits := slice "🍎" "🍌" "🍒" -}}

{{ define "header" }}<h1>{{ . | upper }}</h1>{{ end }}
{{ template "header" "Welcome" }}

Hello, {{ $user.name }}!
{{- if eq $user.role "admin" }} [Admin]
{{- else if eq $user.role "mod" }} [Mod]
{{- else }} [User]
{{- end }}

{{ with $user }}{{ if ge .age 18 }}Full access.{{ else }}Limited access.{{ end }}{{ end }}

Fruits: {{ range $i, $f := $fruits }}{{ if $i }}, {{ end }}{{ $f }}{{ else }}None{{ end }}

{{ $text := "Hello, World!" }}
{{ if contains $text "Hello" }}{{ $text | replace "Hello" "Hi" | lower }}{{ end }}

{{ define "box" -}}
╔══{{ . | printf "%s" | replaceAll " " "═" }}══╗
║ {{ . | printf "%s" }} ║
╚══{{ . | printf "%s" | replaceAll " " "═" }}══╝
{{- end }}
{{ template "box" "Go Templates!" }}

{{- $data := dict "x" 10 "y" 20 "z" 30 -}}
{{ range $k, $v := $data }}{{ printf "%s=%d " $k $v }}{{ end }}

Date: {{ now.Format "2006-01-02" }}

{{/* Multi-line
    comment */}}

{{ range $i, $v := slice 1 2 3 4 5 -}}
  {{- if eq $i 2 }}{{ break }}{{ end -}}
  {{- if eq $v 1 }}{{ continue }}{{ end -}}
  {{ $v }}
{{- end }}

